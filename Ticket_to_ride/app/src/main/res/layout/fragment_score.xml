<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameViews.ScoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Score" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player Name"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/score_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rank"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/score_totalscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total Score"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/score_ticketscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ticket Score"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/score_ticketloss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ticket Loss"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/score_longest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Longest Path"
                    android:padding="10dp"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/score_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

        </LinearLayout>

        <Button
            android:id="@+id/score_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to Lobby"/>

    </LinearLayout>



</FrameLayout>